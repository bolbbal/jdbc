package javaJDBCshop;

import java.sql.Connection;
import java.util.Date;
import java.util.List;
import java.util.Scanner;

public class ShopMain {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		boolean flag = true;
		ShopDao dao = new ShopDao();
		while(flag) {
			System.out.println("[1]회원등록[2]회원등록 조회[3]회원매출조회[4]종료");
			System.out.println("작업 선택 >> ");
			String sel = sc.next();
			
			if(sel.equals("1")) {
				ShopVo vo = new ShopVo();
				int custno = dao.getAuto();
				System.out.println("홈쇼핑 회원 등록");
				System.out.println("회원번호(자동발생):" + custno);
				System.out.println("회원성명 : ");
				vo.setCustname(sc.next());
				System.out.println("회원전화 : ");
				vo.setPhone(sc.next());
				System.out.println("회원주소 : ");
				vo.setAddress(sc.next());
				System.out.println("가입일자 : ");
				System.out.println("고객등급[A:VIP,B:일반,C:직원] : ");
				System.out.println("도시코드 : ");
			} else if(sel.equals("2")) {
				List<ShopVo> list = dao.selectMember();
				System.out.println("\t\t\t회원목록조회/수정");
				System.out.println("회원번호\t회원성명\t전화번호\t주소\t가입일자\t고객등급\t거주지역");
				for(ShopVo vo : list) {
					System.out.print(vo.getCustno() + "\t");
					System.out.print(vo.getCustname() + "\t");
					System.out.print(vo.getPhone() + "\t");
					System.out.print(vo.getAddress() + "\t");
					System.out.print(vo.getJoindate() + "\t");
					System.out.print(vo.getGrade() + "\t");
					System.out.println(vo.getCity() + "\t");
				}
			} else if(sel.equals("1")) {
				
			} else if(sel.equals("1")) {
				
			} else {
				System.out.println("잘못된 입력입니다.");
			}
		}
	}

}
